
@{
    ViewBag.Title = "Donaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="donors">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="donors_input">
                    <h2>DONA</h2>
                    <form action="#" method="post">
                        <h4>
                            <select>
                                <option>Quiero donar para Fiesta De la Esperanza</option>
                                <option>Quiero donar para Programa Semillitas</option>
                                <option>Quiero donar para Canasta Social</option>
                            </select>
                        </h4>
                        <div id="donate-button-container">
                            <div id="donate-button"></div>
                            <script src="https://www.paypalobjects.com/donate/sdk/donate-sdk.js" charset="UTF-8"></script>
                            <script>
                                PayPal.Donation.Button({
                                    env: 'sandbox',
                                    business: '3ND55FC9FYSEJ',
                                    image: {
                                        src: 'https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif',
                                        alt: 'Donate with PayPal button',
                                        title: 'PayPal - The safer, easier way to pay online!',
                                    }
                                }).render('#donate-button');
                            </script>
                        </div>

                    </form>
                </div>
                <div class="donors_image">
                    <h2>PROYECTOS</h2>
                    <div class="donors_featured owl-carousel owl-theme">
                        <div class="item">
                            <img src="~/img/proyecto1.jpg" alt="">
                            <h3>Fiesta de la esperanza</h3>
                            
                        </div>
                        <div class="item">
                            <img src="~/img/proyecto2.jpg" alt="">
                            <h3>Programa Semillitas</h3>

                        </div>
                        <div class="item">
                            <img src="~/img/noticia3.jpg" alt="">
                            <h3>Canasta Social</h3>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="clear"></div>


<section style="margin-bottom: 20px;"></section>
