@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model MilagrosDeEsperanza.Models.Usuario


<h3 class="text-danger"> ¿Está seguro de eliminar al usuario?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar" asp-controller="Admin" method="post">
            <input type="hidden" asp-for="Email" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="PrimerApellido">Primer Apellido</label>
                <input class="form-control form-control-sm" asp-for="PrimerApellido" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="SegundoApellido">Segundo Apellido</label>
                <input class="form-control form-control-sm" asp-for="SegundoApellido" type="text" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Telefono">Teléfono</label>
                <input class="form-control form-control-sm" asp-for="Telefono" type="text" disabled />
            </div>

            <div class="mb-2">
                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Admin">Volver</a>
            </div>

        </form>

    </div>
</div>