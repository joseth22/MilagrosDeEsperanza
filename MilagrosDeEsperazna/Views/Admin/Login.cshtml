@model List<MilagrosDeEsperanza.Models.Usuario>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                            <div class="card-body">
                                <form method="post" asp-controller="Admin" asp-action="Login">
                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="inputEmail" type="email" name="email" placeholder="name@example.com" />
                                        <label for="inputEmail">Email</label>
                                        <div id="emailErrorMessage" class="invalid-feedback" style="display: none;">Por favor ingresa tu correo electrónico y contraseña.</div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="inputPassword" type="password" name="password" placeholder="Password" />
                                        <label for="inputPassword">Contraseña</label>
                                    </div>
                                    @* <div class="form-check mb-3">
                                        <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                        <label class="form-check-label" for="inputRememberPassword">Recordar Contraseña</label>
                                    </div> *@
                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <button type="submit" class="btn btn-primary">Login</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center py-3">
                                <div class="small"><a href="@Url.Action("Index", "Home")">Regresar a Milagros De Esperanza</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

</div>

<script>
    $(document).ready(function () {
        $("form").submit(function (e) {
            var email = $("#inputEmail").val();
            var password = $("#inputPassword").val();
            if (email === "" || password === "") {
                e.preventDefault(); // Evita que el formulario se envíe
                $("#emailErrorMessage").show(); // Muestra el mensaje de error
            } else {
                $("#emailErrorMessage").hide(); // Oculta el mensaje de error si los campos están llenos
            }
        });
    });
</script>


